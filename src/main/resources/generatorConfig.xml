<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <classPathEntry location="F:\repository\mysql\mysql-connector-java\8.0.15\mysql-connector-java-8.0.15.jar"/>

    <context id="mybatisGenerator" targetRuntime="MyBatis3">
        <!-- 指定数据连接驱动jar地址 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/demo?useUnicode=true&amp;characterEncoding=utf8&amp;useSSL=false&amp;serverTimezone=Asia/Shanghai"
                        userId="tester"
                        password="demo110"/>

        <javaModelGenerator targetPackage="com.example.demo.model" targetProject="src/main/java"/>

        <sqlMapGenerator targetPackage="com.example.demo.mapper" targetProject="src/main/resources"/>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.example.demo.repository"
                             targetProject="src/main/java"/>

        <!-- 列出要生成代码的所有表，这里配置的是不生成Example文件 -->
        <table tableName="dir_mgt"
               domainObjectName="DirMgtPO"/>
    </context>
</generatorConfiguration>